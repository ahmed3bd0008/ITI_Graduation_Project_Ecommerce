@model ChangePasswordViewModel
@{
    Layout = null;
}

<div class="modal-header">
    <h6 class="modal-title">Change User password</h6><button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
</div>


    <form class="text-center  modal-body" method="post" asp-action="ChangeUserPassword" asp-controller="Administration">
        <div class="form-group">
            <input type="text" asp-for="@Model.UserName" class="form-control" />
            <input type="hidden" asp-for="@Model.UserId" />
        </div>
        <input class="btn ripple btn-primary" value=" Save changes" type="submit" asp-action="ChangeUserPassword" asp-controller="Administration" />
        <button class="btn ripple btn-secondary" data-dismiss="modal" type="button">Close</button>
    </form>
