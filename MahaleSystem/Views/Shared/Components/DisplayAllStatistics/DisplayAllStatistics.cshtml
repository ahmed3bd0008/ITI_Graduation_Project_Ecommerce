@using MahaleSystem.ViewModel.Manahel
@model Tuple<List<InfoVM>[], int>


<div class="row">
    <div class="col-sm-12 col-xl-12 col-lg-12">
        <div class="card custom-card">
            <div class="card-body dash1">
                <div class="d-flex">
                    <p class="mb-1 tx-inverse">The general average of all Manahels</p>
                    <div class="mr-auto">
                        <i class="fas fa-chart-line fs-20 text-primary"></i>
                    </div>
                </div>
                <div>
                    <h3 class="dash-25">@Model.Item2%</h3>
                </div>
                <div class="progress">
                    <div class="progress-bar bg-warning" style="width:@Model.Item2%"></div>
                </div>
                @*<div class="progress mb-1">
                    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="@Model.Item2" class="progress-bar progress-bar-xs wd-70p bg-warning" role="progressbar"></div>
                </div>*@
                <div class="expansion-label d-flex">
                </div>
            </div>
        </div>
    </div>
</div>

@{ int count = Model.Item1[1][0].value;}

@foreach (var item1 in Model.Item1)
{
    <!-- Row -->
<div class="row row-sm">
    @foreach (var item in item1)
    {
        
    <div class="col-sm-6 col-xl-3 col-lg-6">
        <div class="card custom-card">
            <div class="card-body dash1">
                <div class="d-flex">
                    <p class="mb-1 tx-inverse">@item.name</p>
                    <div class="mr-auto">
                        <i class="fas fa-chart-line fs-20 text-primary"></i>
                    </div>
                </div>
                <div>
                    @{ int x = item.value;}
                    <h3 class="dash-25">@x</h3>
                </div>
                @*<div>
                        <progress max="500" value="@item.value"></progress>
                    </div>*@
            <div class="progress">
                @{ int x2 = (item.value * 100) / count;}
                <div class="progress-bar bg-warning" style="width:@x2%"></div>
            </div>
                @*<div class="progress mb-1">
                        <div aria-valuemax="500" aria-valuemin="0" aria-valuenow="@item.value" class="progress-bar progress-bar-xs wd-70p bg-warning" role="progressbar"></div>
                    </div>*@
                <div class="expansion-label d-flex">
                </div>
            </div>
        </div>
    </div>
}
</div>
    <hr />
}