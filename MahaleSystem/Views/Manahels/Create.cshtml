@model MahaleSystem.Models.Manahel

@{
    ViewData["Title"] = "Create";
  
}


<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h1 class="container">Add New Manahal</h1>
                    <p class="text-muted card-sub-title">This is a demo of a required field that must not leave empty.</p>
                </div>
                <form action="form-validation.html" data-parsley-validate="">
                    <div class="">
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">SSN: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="Ssn" placeholder="Enter SSN A, B" required="" type="text">
                                <span asp-validation-for="Ssn" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Manahal Name: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="NickName" placeholder="Enter Manahal Name" required="" type="text">
                                <span asp-validation-for="NickName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Flower Name: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="FlowerName" placeholder="Enter Flower Name" required="" type="text">
                                <span asp-validation-for="FlowerName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Location Name: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="LocationName" placeholder="Enter Location Name" required="" type="text">
                                <span asp-validation-for="LocationName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Date Created: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="DateCreated" placeholder="Enter Date Created" required="" type="date">
                                <span asp-validation-for="DateCreated" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group"> @*mg-t-20 mg-lg-t-0*@
                                <label class="form-label">Select Admin: <span class="tx-danger">*</span></label>
                                @*<p class="mg-b-10">Single Select with Search</p>*@
                                <select class="form-control select2">
                                    <option value="Admin 1">
                                        Admin 1
                                    </option>
                                    <option value="Admin 2">
                                        Admin 2
                                    </option>
                                    <option value="Admin 3">
                                        Admin3
                                    </option>
                                    <option value="Admin 4">
                                        Admin 4
                                    </option>
                                </select>
                                <span @*asp-validation-for="Ssn"*@ class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Row -->
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="card custom-card">
                                    <div class="card-body">
                                        <div>
                                            <h6 class="card-title mb-1">Image Upload</h6>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-12 col-md-4">
                                                <input type="file" class="dropify" accept=".jpg, .png, image/jpeg, image/png" data-height="200" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Row -->
                    </div>
                    <button class="btn ripple btn-main-primary btn-block" type="submit">Add New Manhal</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

