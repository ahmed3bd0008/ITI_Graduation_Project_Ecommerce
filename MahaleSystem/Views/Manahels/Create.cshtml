@model MahaleSystem.ViewModel.Manahel.CreateManhalVM

@{
    ViewData["Title"] = "Create";
}


<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h1 class="container">Add New Manahal</h1>
                    <p class="text-muted card-sub-title"></p>
                </div>
                <form asp-action="Create" asp-controller="Manahels" method="post">
                    <div class="">
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">SSN: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="manahel.Ssn" placeholder="Enter SSN A, B" required="" type="text">
                                <span asp-validation-for="manahel.Ssn" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Manahal Name: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="manahel.NickName" placeholder="Enter Manahal Name" required="" type="text">
                                <span asp-validation-for="manahel.NickName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Flower Name: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="manahel.FlowerName" placeholder="Enter Flower Name" required="" type="text">
                                <span asp-validation-for="manahel.FlowerName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Location Name: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="manahel.LocationName" placeholder="Enter Location Name" required="" type="text">
                                <span asp-validation-for="manahel.LocationName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Date Created: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="manahel.DateCreated" placeholder="Enter Date Created" required="" type="date">
                                <span asp-validation-for="manahel.DateCreated" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group"> @*mg-t-20 mg-lg-t-0*@
                                <label class="form-label">Select Admin: <span class="tx-danger">*</span></label>
                                @*<p class="mg-b-10">Single Select with Search</p>*@
                                @*<select asp-for="AccountId" asp-items="@ViewBag.Admins"></select>*@
                                <select asp-for="AccountId" class="form-control select2">
                                    @foreach (var item in ViewBag.Users as List<Tuple<string, string>>)
                                    {
                                        <option value="@item.Item1">@item.Item2</option>
                                    }
                                </select>
                                <span asp-validation-for="AccountId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Row -->
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="card custom-card">
                                    <div class="card-body">
                                        <div>
                                            <h6 class="card-title mb-1">Upload Image</h6>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-12 col-md-4">
                                                <input type="file" asp-for="imageFile" name="imageFile" class="dropify" accept=".jpg, .png, image/jpeg, image/png" data-height="200" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Row -->
                    </div>
                    <button class="btn ripple btn-main-primary btn-block" type="submit">Add New Manhal</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

