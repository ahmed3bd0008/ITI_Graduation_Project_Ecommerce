@model MahaleSystem.Models.Manahel

@{
    ViewData["Title"] = "Edit";
}
<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h1 class="container">تعديل بيانات المنحل</h1>
                    <p class="text-muted card-sub-title"></p>
                </div>
                <form asp-action="Edit" asp-controller="Manahels" method="post">
                    <div class="">
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">كود المنحل:</label>
                                <input class="form-control" asp-for="Ssn" readonly  required="" type="text">
                                <span asp-validation-for="Ssn" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">اسم المنحل:</label>
                                <input class="form-control" asp-for="NickName" required="" type="text">
                                <span asp-validation-for="NickName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">اسم الزهرة:</label>
                                <input class="form-control" asp-for="FlowerName" required="" type="text">
                                <span asp-validation-for="FlowerName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">الموقع:</label>
                                <input class="form-control" asp-for="LocationName" required="" type="text">
                                <span asp-validation-for="LocationName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">تاريخ الانشاء:</label>
                                <input class="form-control" asp-for="DateCreated" required="" type="date">
                                <span asp-validation-for="DateCreated" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button class="btn ripple btn-main-primary btn-block" type="submit">حفظ التعديلات</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>