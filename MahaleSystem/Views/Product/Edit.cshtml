@model MahaleSystem.Models.Product

@{
    ViewData["Title"] = "Edit";
}
<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h1 class="container">Edit product</h1>
                    <p class="text-muted card-sub-title"></p>
                </div>
                <form asp-action="Edit" asp-controller="Product" method="post">
                    <div class="">
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Id:</label>
                                <input class="form-control" asp-for="Id" readonly  required="" type="text">
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Product Name:</label>
                                <input class="form-control" asp-for="ProductName" required="" type="text">
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Product Amount:</label>
                                <input class="form-control" asp-for="ProductAmount" required="" type="text">
                                <span asp-validation-for="ProductAmount" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Flower Name:</label>
                                <input class="form-control" asp-for="FlowerName" required="" type="text">
                                <span asp-validation-for="FlowerName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Date Created:</label>
                                <input class="form-control" asp-for="DatePick" required="" type="date">
                                <span asp-validation-for="DatePick" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">manhald:</label>
                                <input class="form-control" asp-for="ManhalId" required="" type="text">
                                <span asp-validation-for="ManhalId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button class="btn ripple btn-main-primary btn-block" type="submit">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>