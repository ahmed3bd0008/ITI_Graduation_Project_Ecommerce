@model MahaleSystem.Models.Product

@{
    ViewData["Title"] = "Create";
}


<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h1 class="container">إضافة منتج جديد</h1>
                    <p class="text-muted card-sub-title">This is a demo of a required field that must not leave empty.</p>
                </div>
                <form asp-action="Create" asp-controller="Product" method="post">
                    <div class="">
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">اسم المنتج: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="ProductName" placeholder="أدخل اسم المنتج" required="" type="text">
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">اسم الزهرة: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="FlowerName" placeholder="ادخل اسم الزهرة" required="" type="text">
                                <span asp-validation-for="FlowerName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label"> الكمية: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="ProductAmount" required="" type="number">
                                <span asp-validation-for="ProductAmount" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">اختيار الوعاء: <span class="tx-danger">*</span></label>
                                <select asp-for="Containter" class="form-control select2">
                                    <option value="كيلو" selected>كيلو</option>
                                    <option value="صفيحة">صفيحة</option>
                                    <option value="جركن">جركن</option>
                                    <option value="جارة">جارة</option>
                                </select>
                                <span asp-validation-for="Containter" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">وصف المنتج: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="Description" placeholder="أدخل وصف للمنتج" required="">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">التاريخ: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="DatePick" required="" type="date">
                                <span asp-validation-for="DatePick" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="ManhalId" value=@ViewBag.ManhalId/>
                        
                        <!-- End Row -->
                    </div>
                    <button class="btn ripple btn-main-primary btn-block" type="submit">إضافة المنتج</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

