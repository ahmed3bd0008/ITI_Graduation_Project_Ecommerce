@model MahaleSystem.Models.Product

@{
    ViewData["Title"] = "Create";
}


<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h1 class="container">Add New Product</h1>
                    <p class="text-muted card-sub-title">This is a demo of a required field that must not leave empty.</p>
                </div>
                <form asp-action="Create" asp-controller="Manahels" method="post">
                    <div class="">
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Id: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="Id" placeholder="Enter ID " required="" type="text">
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Product Name: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="ProductName" placeholder="Enter Manahal Name" required="" type="text">
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Flower Name: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="FlowerName" placeholder="Enter Manahal Name" required="" type="text">
                                <span asp-validation-for="FlowerName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">  Product Amount: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="ProductAmount" placeholder="Enter Flower Name" required="" type="text">
                                <span asp-validation-for="ProductAmount" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">ManhalId: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="ManhalId" placeholder="Enter Location Name" required="" type="text">
                                <span asp-validation-for="ManhalId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Date Created: <span class="tx-danger">*</span></label>
                                <input class="form-control" asp-for="DatePick" placeholder="Enter Date Created" required="" type="date">
                                <span asp-validation-for="DatePick" class="text-danger"></span>
                            </div>
                           
                        </div>
                       
                        
                        <!-- End Row -->
                    </div>
                    <button class="btn ripple btn-main-primary btn-block" type="submit">Add New Product</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

