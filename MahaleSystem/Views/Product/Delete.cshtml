@model MahaleSystem.Models.Product

@{
    ViewData["Title"] = "Delete";
}
<style>
    .pContent{
        background-color:blue;
        color:white;
        padding:1px 15px;
    }
    label{
        font-weight:bold;
    }
</style>
<h3 class="text-danger text-center">Are you sure you want to delete this Product</h3>
<div class="alert alert-dismissible alert-warning">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    @*<h4 class="alert-heading">Note!</h4>*@
    @*<p class="mb-0">when you remove this Manahel you will loss all khalia and queen data and do not retrive them <a href="#" class="alert-link"></a>.</p>*@
</div>
<hr />
<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h1 class="container">Delete this Product</h1>
                    <p class="text-muted card-sub-title"></p>
                </div>
                <form asp-action="Delete" asp-controller="Manahels" method="post">
                    <div class="">
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Id:</label>
                                <p><span class="pContent">@Html.DisplayFor(model => model.Id)</span></p>
                                
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Product Name:</label>
                                <p><span class="pContent">@Html.DisplayFor(model => model.ProductName)</span></p>
                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Product Amount:</label>
                                <p><span class="pContent">@Html.DisplayFor(model => model.ProductAmount)</span></p>
                                
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Flawer Name:</label>
                                <p><span class="pContent">@Html.DisplayFor(model => model.FlowerName)</span></p>
                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label class="form-label">Date pick: </label>
                                @{ string txt = Model.DatePick.ToShortDateString();}
                                <p><span class="pContent">@txt</span></p>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="form-label">manhal:</label>
                                <p><span class="pContent">@Html.DisplayFor(model => model.ManhalId)</span></p>

                            </div>
                        </div>
                    </div>
                    <button class="btn ripple btn-danger btn-block" type="submit">Delete Product</button>
                </form>
            </div>
        </div>
    </div>
</div>
<a asp-action="SuperAdminIndex">Back to List</a>